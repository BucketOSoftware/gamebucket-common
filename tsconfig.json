{
    "extends": "@tsconfig/recommended/tsconfig.json",

    "compilerOptions": {
        "composite": true,

        "declarationMap": true,
        "sourceMap": true,
        "module": "esnext",

        "lib": ["esnext", "DOM"],
        "resolveJsonModule": true,
        "moduleResolution": "bundler",

        "jsx": "react-jsx",

        // For preact:
        // "jsxImportSource": "preact",
        "paths": {
            // "react": ["./node_modules/preact/compat/"],
            // "react-dom": ["./node_modules/preact/compat/"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["unused/**"]
}
